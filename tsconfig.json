{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,               
     "outDir": "./dist",                        
     "rootDir": "./src",                       
    "strict": true,                           
     "strictPropertyInitialization": false,  
     "baseUrl": "./src",                    
     "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"]
      },                                            
     "experimentalDecorators": true,        
     "emitDecoratorMetadata": true,         
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  }
}